<div>
      
      <a class="hiddenanchor" id="signin"></a>

      <div class="login_wrapper">
        <div class="animate form login_form">
          <section class="login_content"> 
            
              

              

             <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
              <h1>Sign Up - User</h1>
                <div>
                  <%= f.email_field :email, type:"text", class:"form-control", placeholder:"Username", required:"",  autofocus: true, autocomplete: "email" %>
                </div>

                <div>
                  <%= f.password_field :password, type:"password", class:"form-control", autocomplete:"current-password", placeholder:"Password", required:"" %>
                </div>

                 <div>
                  <%= f.password_field :password_confirmation, type:"password", class:"form-control", autocomplete:"current-password", placeholder:"Password Confirmation", required:"" %>
                </div>
              <div>

              <% if devise_mapping.rememberable? %>
                <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
                </div>
              <% end %>

                  <div class="actions">
                  <%= f.submit "Sign Up", class:"btn btn-primary" %>
                  </div>
              <% end %>
                
              </div>

              <div class="clearfix"></div>

              <div class="separator">
                <%= render "users/shared/links" %>
                <div class="clearfix"></div>
                <br />

                <div>
                  <h1><i class="fa"></i> Time to Answer</h1>
                  <p>Â©2022 All Rights Reserved.</p>
                </div>
              </div>
            
          </section>
        </div>

        <div id="register" class="animate form registration_form">
          
        </div>
      </div>
    </div>



