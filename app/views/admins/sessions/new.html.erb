
<div class="row justify-content-center">
<h2>Log in - Admin</h2>
            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                    <div class="p-5">
                                    <div class="text-center">
                                      <% flash.each do |key, value| %>
                                        <div class="flash <%= key %>"><%= value %></div>
                                      <% end %>
                                        <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                    </div>
                                    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"user") do |f| %>
                                    
                                        <div class="form-group">
                                         
                                          <%= f.email_field :email, autofocus: true, 
                                          class:"form-control form-control-user", 
                                          id:"exampleInputEmail",  
                                          placeholder:"Enter Email Address..." %>
                                            
                                        </div>
                                        <div class="form-group">
                                        
                                          <%= f.password_field :password, class:"form-control form-control-user",
                                                id:"exampleInputPassword", placeholder:"Password" %>
                                            
                                        </div>
                                        <div class="form-group">
                                        <% if devise_mapping.rememberable? %>
                                          <div class="custom-control custom-checkbox small">
                                            
                                            <%= f.check_box :remember_me, class:"custom-control-input", id:"customCheck" %>
                                            <%= f.label :remember_me,  class:"custom-control-label", for:"customCheck" %>
                                            
                                        <% end %>
                                        
                                                
                                          </div>
                                        <div class="actions">
                                          <%= f.submit "Log in", class:"btn btn-primary btn-user btn-block" %>
                                            
                                          <% end %>
                                        </div>
                                        
                                        <hr>
                                        
                                    
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="forgot-password.html">Forgot Password?</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="register.html">Create an Account!</a>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>