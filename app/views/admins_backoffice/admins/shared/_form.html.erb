<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800"><%= action_message %></h1>
</div>
<hr>
<% if @admin.errors.any?  %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
    <ul>
      <% @admin.errors.full_messages.each do |message|%>
        <li>
          <%= message %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="card mb-4 py-3 border-bottom-info">
  <div class="card-body">
    <%= form_with(model: [ :admins_backoffice, @admin ], local: true, class:"user") do |form| %>
      <div class="form-group">
        <%= form.label :email %>
        <%= form.text_field :email, class:"form-control form-control-user", placeholder: true %>
      </div>
      <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password, class:"form-control form-control-user", placeholder: true %>
      </div>
      <div class="form-group">
        <%= form.label :password_confirmation %>
        <%= form.password_field :password, class:"form-control form-control-user", placeholder: true %>
      </div>
      <div class="form-group">
      </div>
      <hr>
      <button type="submit" class="ftn btn-primary btn-icon-split btn-sm">
        <span class="icon text-white-50">
          <i class="fas fa-flag"></i>
        </span>
        <span class="text"><%=t('buttons.confirm')%></span>
      </button>
      <button type="submit" class="tn btn-secondary btn-icon-split btn-sm">
        <span class="icon text-white-50">
          <i class="fas fa-flag"></i>
        </span>
        <span class="text"><%=t('buttons.back')%></span>
      </button>
    <% end %>
  </div>
</div>
